<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Konsultasi">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="Kembali"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        style="@style/HeaderBar"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="50dp">


        <ImageView
            android:id="@+id/imgKonsul"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_konsultasi" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgKonsul"
            android:layout_marginTop="15dp"
            android:text="Mulai Konsultasi"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginTop="5dp"
            android:text="Dengan Diagnosa Pada Sistem Pakar"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ListDiagnosa"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@id/text2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/bgbutton"
            android:drawableLeft="@drawable/ic_diagnosa_resize"
            android:padding="20dp"
            android:text="Mulai Diagnosa"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ListRiwayat"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/ListDiagnosa"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/bgbutton"
            android:drawableLeft="@drawable/ic_riwayat_resize"
            android:padding="20dp"
            android:text="Riwayat Diagnosa"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="gone"/>

    </RelativeLayout>





</RelativeLayout>